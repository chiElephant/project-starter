{
  "name": "project-starter",
  "version": "1.0.0",
  "description": "A Full-Stack project starter with testing, logging, monitoring, and containerization.",
  "type": "module",
  "scripts": {
    "dev:web": "cd web && pnpm run dev",
    "dev:api": "cd api && pnpm run dev",
    "build:web": "cd web && pnpm run build",
    "build:api": "cd api && pnpm run build",
    "start:web": "cd web && pnpm start",
    "start:api": "cd api && pnpm start",
    "format": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --check . | tee logs/prettier.log",
    "format:fix": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --write .",
    "lint": "export ESLINT_USE_FLAT_CONFIG=true && eslint -c config/eslint.config.mjs . | tee logs/eslint.log",
    "lint:fix": "export ESLINT_USE_FLAT_CONFIG=true && eslint -c config/eslint.config.mjs --fix .",
    "a:log": "sh -c 'pnpm add \"$1\" | tee logs/pnpm.log' --",
    "d:log": "sh -c 'pnpm add --save-dev \"$1\" | tee logs/pnpm.log' --",
    "i:log": "pnpm install | tee logs/pnpm.log",
    "docker:build": "docker-compose build | tee logs/docker.log",
    "docker:up": "docker-compose up | tee logs/docker.log",
    "docker:up:detached": "docker-compose up -d | tee logs/docker.log",
    "docker:down": "docker-compose down | tee logs/docker.log",
    "docker:logs": "docker-compose logs | tee logs/docker.log",
    "docker:ps": "docker-compose ps | tee logs/docker.log",
    "docker:restart": "docker-compose restart | tee logs/docker.log",
    "test": "jest --passWithNoTests --config=config/jest.config.ts ",
    "test:watch": "jest --passWithNoTests --config=config/jest.config.ts --watch"
  },
  "keywords": [
    "next.js",
    "express",
    "typescript",
    "docker",
    "github actions",
    "tailwind",
    "node",
    "jest",
    "cypress",
    "prometheus",
    "elk stack"
  ],
  "author": "Anthony Merino",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^1.1.0",
    "@eslint/js": "^9.5.0",
    "@jest/types": "^29.6.3",
    "@next/eslint-plugin-next": "^14.2.4",
    "@testing-library/dom": "^10.2.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "^14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-notifier": "^10.0.1",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^7.14.1"
  }
}
