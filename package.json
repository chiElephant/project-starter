{
  "name": "project-starter",
  "version": "1.0.0",
  "description": "A Full-Stack project starter with testing, logging, monitoring, and containerization.",
  "type": "module",
  "scripts": {
    "dev:web": "cd web && pnpm run dev",
    "dev:api": "cd api && pnpm run dev",
    "build:web": "cd web && pnpm run build",
    "build:api": "cd api && pnpm run build",
    "start:web": "cd web && pnpm start",
    "start:api": "cd api ** pnpm start",
    "format": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --check . | tee -a logs/prettier.log",
    "format:fix": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --write .",
    "lint": "export ESLINT_USE_FLAT_CONFIG=true && eslint -c config/eslint.config.mjs . | tee -a logs/eslint.log",
    "lint:fix": "export ESLINT_USE_FLAT_CONFIG=true && eslint -c config/eslint.config.mjs --fix .",
    "a:log": "sh -c 'pnpm add \"$1\" --reporter ndjson | tee -a logs/pnpm.log' --",
    "d:log": "sh -c 'pnpm add -D \"$1\" --reporter ndjson | tee -a logs/pnpm.log' --",
    "i:log": "pnpm install --reporter ndjson | tee -a logs/pnpm.log",
    "docker:build": "docker-compose build | tee -a logs/docker.log",
    "docker:up": "docker-compose up | tee -a logs/docker.log",
    "docker:up:detached": "docker-compose up -d | tee -a logs/docker.log",
    "docker:down": "docker-compose down | tee -a logs/docker.log",
    "docker:logs": "docker-compose logs | tee -a logs/docker.log",
    "docker:ps": "docker-compose ps | tee -a logs/docker.log",
    "docker:restart": "docker-compose restart | tee -a logs/docker.log"
  },
  "keywords": [
    "next.js",
    "express",
    "typescript",
    "docker",
    "tailwind",
    "node",
    "jest",
    "cypress",
    "prometheus",
    "elk stack"
  ],
  "author": "Anthony Merino",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^1.1.0",
    "@eslint/js": "^9.5.0",
    "@next/eslint-plugin-next": "^14.2.4",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "^14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.6.0",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "typescript-eslint": "^7.14.1"
  }
}
